# Maintainer: Saeed Badrelden <saeed@example.com>
pkgname=momo
pkgver=1.0.0
pkgrel=1
pkgdesc="Momo - Helwan Linux Diagnostics Tool (TUI + Streaming + Dynamic Disks)"
arch=('x86_64')
url="https://github.com/helwan-linux/momo"
license=('GPL')
depends=('python' 'python-curses' 'lm_sensors' 'smartmontools' 'hdparm' 'nvme-cli' 'stress-ng' 'memtester' 'sysbench')
# تم تغيير momo.py إلى momo
source=("momo")
sha256sums=('SKIP') 

package() {
    # تثبيت الملف التنفيذي في /usr/local/bin باسم "momo"
    install -Dm755 "${srcdir}/momo" "${pkgdir}/usr/local/bin/momo"
    
    # تم حذف سطر mkdir -p الخاص بالمنزل لضمان التوافق.
}
