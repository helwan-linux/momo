# Maintainer: Saeed Badrelden <saeed@example.com>
pkgname=momo
pkgver=1.0.0
pkgrel=1
pkgdesc="Momo - Helwan Linux Diagnostics Tool (TUI + Streaming + Dynamic Disks)"
arch=('x86_64')
url="https://github.com/helwan-linux/momo"
license=('GPL')
depends=('python' 'python-curses' 'lm_sensors' 'smartmontools' 'hdparm' 'nvme-cli' 'stress-ng' 'memtester' 'sysbench')
source=("momo.py")
sha256sums=('SKIP') # قم بتغييرها لاحقًا إذا أردت التحقق من الملف

package() {
    # إنشاء المجلد الرئيسي للبرنامج
    install -Dm755 "${srcdir}/momo.py" "${pkgdir}/usr/local/bin/momo"

    # إنشاء مجلد Logs
    mkdir -p "${pkgdir}/home/${USER}/.momo/logs"
}
